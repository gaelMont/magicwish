'use client'; 

import { useState } from 'react';

// C'est une "bonne pratique" de définir le type des données qu'on attend.
// Vous pouvez ignorer ça pour l'instant si c'est trop complexe, 
// mais TypeScript vous remerciera plus tard.
type ScryfallCard = {
  id: string;
  name: string;
  image_uris?: {
    small: string;
  };
};

export default function HomePage() {
  // 1. Les "états" de notre composant
  const [query, setQuery] = useState(''); // L'état pour le texte de la barre de recherche
  const [results, setResults] = useState<ScryfallCard[]>([]); // L'état pour la liste des résultats
  const [isLoading, setIsLoading] = useState(false); // Pour afficher un "chargement..."
  const [error, setError] = useState<string | null>(null); // Pour afficher les erreurs

  // 2. La fonction qui se déclenche quand on clique sur le bouton
  const handleSearch = async (e: React.FormEvent) => {
    e.preventDefault(); // Empêche la page de se recharger
    
    setIsLoading(true); // On commence le chargement
    setError(null);
    setResults([]); // On vide les anciens résultats

    try {
      // 3. ON APPELLE NOTRE PROPRE API !
      const response = await fetch(`/api/search?q=${query}`);

      if (!response.ok) {
        const errorData = await response.json();
        throw new Error(errorData.error || 'Une erreur est survenue');
      }

      const data = await response.json();
      
      // Scryfall renvoie un objet avec une clé 'data' qui contient la liste
      setResults(data.data); 

    } catch (err) {
      setError(err instanceof Error ? err.message : 'Erreur inconnue');
    } finally {
      setIsLoading(false); // On arrête le chargement
    }
  };

  // 4. Le JSX : ce que l'utilisateur voit (le HTML)
  // (J'utilise Tailwind CSS, que vous avez installé, pour le style)
  return (
    <main className="container mx-auto p-4">
      <h1 className="text-3xl font-bold mb-4">Rechercher une carte Magic</h1>

      {/* Le formulaire de recherche */}
      <form onSubmit={handleSearch} className="flex gap-2 mb-4">
        <input
          type="text"
          value={query}
          onChange={(e) => setQuery(e.target.value)}
          placeholder="Entrez un nom de carte (ex: Sol Ring)"
          className="flex-grow p-2 border rounded text-black"
        />
        <button 
          type="submit" 
          disabled={isLoading}
          className="bg-blue-500 text-white p-2 rounded disabled:bg-gray-400"
        >
          {isLoading ? 'Recherche...' : 'Rechercher'}
        </button>
      </form>

      {/* Affichage des erreurs */}
      {error && <p className="text-red-500">Erreur : {error}</p>}

      {/* Affichage des résultats */}
      <div className="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        {results.map((card) => (
          <div key={card.id}>
            <img
              src={card.image_uris?.small || ''} // Utilise l'image "small"
              alt={card.name}
              className="rounded"
            />
            <p className="text-center text-sm mt-1">{card.name}</p>
          </div>
        ))}
      </div>
    </main>
  );
}
