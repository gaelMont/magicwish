// hooks/useDebounceUpdate.ts
import { useCallback, useRef } from 'react';

/**
 * Permet de diff√©rer l'ex√©cution d'une fonction (ex: √©criture Firebase)
 * pour √©viter d'envoyer 10 requ√™tes si l'utilisateur clique 10 fois.
 */
export function useDebouncedUpdate<T>(updateFn: (args: T) => void, delay = 500) {
    // Stocke l'identifiant du timer
    const timeoutRef = useRef<NodeJS.Timeout | null>(null);

    const debouncedFn = useCallback((args: T) => {
        // 1. Si un timer est d√©j√† en cours (un clic pr√©c√©dent), on l'annule
        if (timeoutRef.current) {
            clearTimeout(timeoutRef.current);
        }

        // 2. On lance un nouveau timer
        timeoutRef.current = setTimeout(() => {
            updateFn(args);
        }, delay);
    }, [updateFn, delay]);

    return debouncedFn;
}
