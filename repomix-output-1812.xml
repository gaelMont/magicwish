export type GameFormat = 'Commander' | 'Standard' | 'Modern' | 'Pauper' | 'Legacy' | 'DuelCommander' | 'Other';

// Sch√©ma de l'enregistrement de partie
interface GameData {
    format: GameFormat; // Utilisation du type √©largi
