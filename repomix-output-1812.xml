        const separator = baseCardmarketUrl.includes('?') ? '&' : '?';
        const param = isFoilVersion ? 'isFoil=Y' : 'isFoil=N';
        return `${baseCardmarketUrl}${separator}${param}`;
    };

    // --- SAUVEGARDE PRIX D'ACHAT ---
